{
  "name": "stringcraft-backend",
  "version": "1.0.0",
  "description": "Backend for StringCraft - MERN e-commerce app for guitars (electric, acoustic, ukulele)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "seed": "node seeder.js",
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "MERN",
    "ecommerce",
    "express",
    "mongodb",
    "stripe",
    "jwt",
    "cloudinary",
    "tailwind",
    "vite",
    "react"
  ],
  "author": "StringCraft Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "slugify": "^1.6.6",
    "stripe": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },

    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
